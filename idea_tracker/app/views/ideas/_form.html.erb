      <% @idea.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <label>Idea Owner</label>
    <select class="form-control">
    <%= options_from_collection_for_select(User.all, :id, :first_name) %>
