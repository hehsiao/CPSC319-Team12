      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <label>Idea Owner</label>
    <select class="form-control">
    <%= options_from_collection_for_select(User.all, :id, :first_name) %>
  </select>
  </div>
  <div class="form-group">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="form-group">
    <%= f.label :provider_partner_id %><br>
