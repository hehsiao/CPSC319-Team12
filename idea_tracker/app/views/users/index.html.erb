<% if !flash[:notice].blank? %>
  <div class="notice">
    <%= flash[:notice] %>
  </div>
<% end %>

<div class="users index">
  <h2>Users</h2>

  <%= link_to("Add New User", {:action => 'new'}, :class => 'action new') %>

  <table class="listing" summary="User list">
    <tr class="header">
      <th>&nbsp;</th>
      <th>Subject</th>
      <th>Ideas</th>
      <th>Actions</th>
    </tr>
    <% @users.each do |user| %>
    <tr>
      <td><%= user.email %></td>
      <td class="center"><%= user.ideas.size %></td>
      <td class="actions">
        <%= link_to("Delete", {:action => 'delete', :id => user.id}, :class => 'action delete') %>
      </td>
    </tr>
    <% end %>
  </table>
</div>