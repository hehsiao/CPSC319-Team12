<div id="page-wrapper">
  <h2>Users</h2>
<!-- 
  <%= link_to("Add New User", {:action => 'new'}, :class => 'action new') %>
 -->
  <table class="table" summary="User list">
    <tr class="header">
      <th>Name</th>
      <th>Email</th>
      <th>Admin</th>
      <th>Remove</th>
    </tr>
    <% if @users %>
    <% @users.each do |user| %>
    <tr>
      <td><%= user.first_name + " " + user.last_name %></td>
      <td><%= user.email %></td>
      <td><% if user.admin? %>
        <i class="fa fa-check"></i>
        <% else %>
        <i class="fa fa-times"></i>
        <% end %>
      </td>
      <td class="actions">
      <!-- ## Implement edit if time permits
        <%= link_to glyph(:pencil), {:action => 'edit', :id => user.id}, :class => "action delete" %> 
      -->
        <%= link_to '<i class="fa fa-trash-o"></i>'.html_safe, {:action => 'delete', :id => user.id}, :class => "action delete" %>
      </td>
    </tr>
    <% end %>
    <% end %>
  </table>
</div>