<div id="page-wrapper">
  <h2>Delete User</h2>

  <%= form_for(:user, :url => {:action => 'destroy', :id => @user.id}) do |f| %>

    <p>Are you sure you want to permanently delete this user?</p>

    <p class="reference-name"><%= @user.email %></p>

    <div class="form-buttons">
      <%= submit_tag "Delete User" %>  <%= link_to("Cancel", {:action => 'index'}, :class => 'back-link') %>
    </div>

  <% end %>

</div>