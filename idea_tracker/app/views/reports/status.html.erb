<h1 class="page-header">Ideas by Status</h1>

<section class="widget">
    
  <div class="panel-body">

    <table class="table table-hover" summary="User list">
      <thead>
        <tr>
          <th>Status</th>
          <th>Number of Ideas</th>
          <th></th>
        </tr>
      </thead>
      
      <tbody>
		<% index = 0 %>
        <% @status.each do |status| %>
          <tr onclick="document.location = '/reports/status_show/<%=status.id%>';">
            <td><%= status.status %></td>
    		<td>
    		<%= @counter_array.at(index) %>
    		</td>
            <% index += 1 %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

<div id="line_graph" style="height: 500px;"></div>
</section>

<script>
  $(function () {
      new Morris.Bar({
        element: 'line_graph',
        data:[
		<% index = 0 %>
        <% @status.each do |status| %>
                {status: "<%= status.status %>", count: <%= @counter_array.at(index) %> },
				<% index += 1 %>
        <% end %>
        ],
        xkey: 'status',
        ykeys: ['count'],
        labels: ['Total'],
        xLabels: ['day'],
        resize: true,
        gridIntegers: true,
        gridTextColor: '#FFF',
        gridTextFamily: '"Open Sans", sans-serif'
      });

  });
</script>
