<h1 class="page-header">Reports</h1>

<section class="widget">
  <div class="panel-heading"><i class="fa fa-bar-chart-o"></i> Stage Report</div>
    
  <div class="panel-body">

    <table class="table table-hover" summary="User list">
      <thead>
        <tr>
          <th>Status</th>
          <th>Number of Ideas</th>
          <th></th>
        </tr>
      </thead>
      
      <tbody>
		<% index = 0 %>
        <% @status.each do |status| %>
          <tr onclick="document.location = '/reports/status_show/<%=status.id%>';">
            <td><%= status.status %></td>
    		<td>
    		<%= @counter_array.at(index) %>
    		</td>
            <% index += 1 %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

<div id="donut_graph" style="height: 500px;"></div>

<div id="line_graph" style="height: 500px;"></div>
</section>

<script>
  $(function () {
      new Morris.Bar({
        element: 'line_graph',
        data:[
		<% index = 0 %>
        <% @status.each do |status| %>
                {status: "<%= status.status %>", count: <%= @counter_array.at(index) %> },
				<% index += 1 %>
        <% end %>
        ],
        xkey: 'status',
        ykeys: ['count'],
        labels: ['Total'],
        xLabels: ['day'],
        resize: true,
        gridTextColor: '#FFF',
        gridTextFamily: '"Open Sans", sans-serif'
      });

  });
</script>

<script>
  $(function () {
    new Morris.Donut({
        element: 'donut_graph',
        data: [
		<% index = 0 %>
		<% @status.each do |status| %>
			{<%= raw "label: '#{status.status}', value: '#{@counter_array.at(index)}'" %>},
			<% index += 1 %>
		<% end %>
		],
        resize: true
    });

  });
</script>
