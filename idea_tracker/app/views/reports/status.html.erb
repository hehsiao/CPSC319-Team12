<div id="page-wrapper">
<h1>Status Reports</h1>

<table class="table" summary="User list">
  <thead>
    <tr>
      <th>Status</th>
      <th>Number of Ideas</th>
      <th></th>
    </tr>
  </thead>
  
  <tbody>
    <% @status.each do |status| %>
      <tr>
        <td><%= status.status %></td>
		<td>
		<% counter = 0 %>
		<% @ideas.each do |idea| %>
			<% if idea.status == status.id %>
				<% counter = counter + 1 %>
			<% end %>
		<%end%>	
		<%= counter %>
		</td>
        
      </tr>
    <% end %>
  </tbody>
</table>


<br>

</div>