<h1 class="page-header">Dashboard</h1>
    <div class="row">
        <div class = "col-lg-6">
            <section class="widget">
                <div class = "panel-heading">
                    <i class = "fa fa-bar-chart-o fa-fw"></i> Ideas Submission <small>[ideas added in the last month]</small>
                </div>
                <div class = "panel-body">
                    <div id="container" style="min-width: 310px; height: 300px; margin: 0 auto"></div>

                </div>
            </section>
        </div>
        <div class = "col-lg-6">
            <%= render 'notification'  %>
        </div>
        <div class="col-lg-12">
            <section class="widget">
                <div class="panel-heading">Recent Ideas (Latest 5 Ideas)</div>
                <div class="panel-body">
                    <table class="table table-hover" summary="Recent Ideas">
                    <%= render "ideas/recent_idea" %>
                    </table>
                </div>
            </section>
        </div>
		<div class="col-lg-12">
            <section class="widget">
                <div class="panel-heading">My Ideas (Latest 5 Ideas)</div>
                <div class="panel-body">  
                    <table class="table table-hover">
                    <%= render "ideas/my_idea" %>
                    </table>
                </div>
            </section>
        </div>
        <div class="col-lg-12">
            <section class="widget">
                <div class="panel-heading">My Subscriptions (Latest 5 Ideas)</div>
                <div class="panel-body">
                <table class="table table-hover">
                <%= render "ideas/subscribed_idea" %>
                </table>
                </div>
            </section>
        </div>
</div>

<script>
  $(function () {
      new Morris.Line({
        element: 'container',
        data:[
        <% @idea_by_day_past_month.each_pair do |key, value| %>
                {<%= raw "date: '#{key}', count: '#{value}'" %>},
        <% end %>
        ],
        xkey: 'date',
        ykeys: ['count'],
        labels: ['Total'],
        xLabels: ['day'],
        resize: true,
        gridIntegers: true,
        gridTextColor: '#FFF',
        gridTextFamily: '"Open Sans", sans-serif'
      });

  });
</script>

