<div id="page-wrapper">
  <div class="row">
  <h1 class="page-header">Dashboard</h2>

<div class="table">
  <h4>Recent Ideas (Latest 5 Ideas)</h4>
  <table class="table table-striped table-hover" summary="Recent Ideas">
    <%= render "ideas/recent_idea" %>
  </table>
</div>
<br><br>
<div class="table">
  <h4>My Ideas</h4>
  <table class="table table-striped table-hover">
    <%= render "ideas/my_idea" %>
  </table>
</div>

<br><br>
<div class="table">
  <h4>My Subscriptions</h4>
  <table class="table table-striped table-hover">
    <%= render "ideas/subscribed_idea" %>
  </table>
</div>

<br><br>
  
<div class = "col-lg-4">
  <div class = "chat-panel panel panel-default">
     <div class = "panel-heading">
         <i class = "fa fa-bell fa-fw"></i>
         "Notification"
     </div>
       <div class = "panel-body">
         <div class = "list-group">

           <% @activities.each do |activity| %>
           <% @sub_ideas.each do |sub_idea| %>
            <% if activity.trackable.id == sub_idea.idea_id %>
             <a href = "/ideas/<%= activity.trackable.id%>" class = "list-group-item">
             <!-- <div class="activity"> -->
              <%= render_activity activity%>
              <span class = "text-muted small">
              <em> <%= activity.created_at%> </em>
            </span>
            <% end %>
             </a>
             <!-- </div> -->
           <% end %> 
           <% end %>

      
      
         </div>
      </div>
  </div>
</div> 
</div>
</div>