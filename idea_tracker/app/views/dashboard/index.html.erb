
<h1 class="page-header">Dashboard</h1>

<div class = "col-lg-6">
  <div class = "chat-panel panel panel-default">
   <div class = "panel-heading">
     <i class = "fa fa-bar-chart-o fa-fw"></i>
     "Idea Statistics"
   </div>
   <div class = "panel-body">
    <%= image_tag "pie.png" %>
  </div>
</div>
</div> 
<div class = "col-lg-6">
  <div class = "chat-panel panel panel-default">
   <div class = "panel-heading">
     <i class = "fa fa-bell fa-fw"></i>
     "Notification"
   </div>
   <div class = "panel-body">
     <div class = "list-group">
           <% @activities.each do |activity| %>
             <% if activity.trackable_type == "Idea"%> 
               <% @sub_ideas.each do |sub_idea| %>
                 <% if activity.trackable_id == sub_idea.idea_id%>
                   <a href = "/ideas/<%= activity.trackable.id%>" class = "list-group-item">
                    <%= render_activity activity%>
                    <span class = "text-muted small">
                      <em> <%= activity.created_at%> </em>
                    </span>
                 <% end %>
                   </a>
               <% end %>
             <% end %>

             <% if activity.trackable_type == "Commontator::Comment"%> 
                <% @comment_ids.each do |comment_id| %>
                 <% if activity.trackable_id == comment_id.id%>
                     <a href = "/ideas/<%= Commontator::Thread.find_by_id(comment_id.thread_id).commontable_id%>" class = "list-group-item">
                     <%= render_activity activity%>
                     <span class = "text-muted small">
                        <em> <%= activity.created_at%> </em>
                     </span>
                 <% end %>
                          </a>
                <% end %> 
             <% end %> 
           <% end %>      
    </div>
  </div>
</div>
</div> 
<div class="col-lg-12">
  <h4>Recent Ideas (Latest 5 Ideas)</h4>
  <table class="table table-striped table-hover" summary="Recent Ideas">
    <%= render "ideas/recent_idea" %>
  </table>
</div>
<br><br>
<div class="col-lg-12">
  <h4>My Ideas</h4>
  <table class="table table-striped table-hover">
    <%= render "ideas/my_idea" %>
  </table>
</div>

<br><br>
<div class="col-lg-12">
  <h4>My Subscriptions</h4>
  <table class="table table-striped table-hover">
    <%= render "ideas/subscribed_idea" %>
  </table>
</div>

<br>
