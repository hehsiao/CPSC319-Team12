<h1 class="page-header">Site Settings</h1>
<section class="widget">
  <div class="panel-heading"><i class="fa fa-bars"></i> List of Settings</div>
<div class="panel-body">
  <div class="table">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Setting</th>
          <th>Value</th>
          <th class="no-sort"></th>
        </tr>
      </thead>

      <tbody>
        <% @settings.each do |c| %>
        <tr>
          <td><%= c.name %></td>
          <td>
          <% if c.name == "Default Owner" %>
            <% owner = User.find(c.data) %>
            <%= owner.first_name + " " + owner.last_name %>
          <% else %>
            <%= c.data %>
          <% end %>
          </td>
          <td><%= link_to '<i class="fa fa-pencil"></i>'.html_safe, edit_setting_path(c), title: 'Edit', ref: 'tooltip' %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
</section>
