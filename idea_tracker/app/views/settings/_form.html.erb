<%= form_for(@setting) do |f| %>
  <% if @setting.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@setting.errors.count, "error") %> prohibited this setting from being saved:</h2>

      <ul>
      <% @setting.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :data %>: <br> 
    <% if @setting.name == "Allow Sign Up" %>
      <%= f.select(:data, options_for_select([['Yes', 'Yes'], ['No', 'No']], @setting.data), {}, {:class=>'form-control'})  %>
      <%= %>
    <% elsif @setting.name == "Default Owner" %>
      <%= f.select(:data, options_from_collection_for_select(User.all, :id, :first_name, @setting.data), {}, { :class => 'form-control' }) %>
    <% end %>
  </div>
  <br>
  <div class="actions">
    <%= f.submit "Submit", :class => "btn btn-primary" %>
  </div>
<% end %>
