<% categories.each do |category| %>
<dl class="dl-horizontal">
	<dt><%= category.category_name %>:</dt>
	<dd>
		<% tag_string = "" %>
		<% category.children.each do |category_tag| %>
			<% tag = category_tag.tag.where(idea_id: idea_id).first %>
			<% if tag %>
				<% tag_string += category_tag.category_name[0...-1] + ", " %> 
			<% end %>
		<% end %>
		<%= tag_string[0...-2] %>
	</dd>
</dl>
<% end %>