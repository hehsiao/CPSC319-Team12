<div id="<%= category_name %>">
	<% tags.each do |tag| %>
		<input type="checkbox" name="cat_tag[]" value="<%= tag.id %>" /><%= tag.category_name %>
		<% if tag.type_id == 5  #TODO: match against name instead of id %> 
			<input type="text" name="cat_tag_data[<%=tag.id%>]" /> <!-- TODO: figure out the proper naming for submission -->
		<% elsif tag.type_id == 6 #TODO: match against name instead of id  %>
			<input type="month" name="cat_tag_data[<%=tag.id%>]" /> <!-- TODO: figure out the proper naming for submission -->
		<% elsif tag.type_id == 7 #TODO: match against name instead of id  %>
			<input type="date" name="cat_tag_data[<%=tag.id%>]" /> <!-- TODO: figure out the proper naming for submission -->
		<% end %>
		<br />
	<% end %>
</div>