<% defined?(idea_id) or idea_id = 0 %>
<% special_tag = [] %>
<select id="<%= category_name %>" name="cat_tag[]" class="form-control">
	<% category_tags.each do |cat_tag| %>
		<% tag = cat_tag.tag.where(idea_id: idea_id) %>
		<option value="<%= cat_tag.id %>" <%= !tag.empty? ? "selected" : "" %>> <%= cat_tag.category_name %></option>
		<% if [5,6,7].include?(cat_tag.type_id) %>
			<% special_tag << cat_tag %>
		<% end %>
	<% end %>
</select>
<%= render :partial => "category_utils/special_tag_script_display", :locals => {:idea_id => idea_id, :category_tags => special_tag, :category_name => category_name} %>