<h1 class="page-header">Partners <small><%= @partner.partner_name %></small></h1>
<h5 class="widget">
    <%= link_to '<i class="fa fa-plus"> </i> Add a New Partner'.html_safe , new_partner_path  %> | 
    <%= link_to '<i class="fa fa-pencil"></i> Edit Partner'.html_safe, edit_partner_path(@partner) %> |
    <%= link_to '<i class="fa fa-reply"></i> Back'.html_safe, partners_path %>
</h5>

<div class="row">
  <div class="col-md-4">
    <section class="widget">
      <div class="panel-header"><i class="fa fa-user"></i> <%= @partner.contact_name %></div>
      <div class="panel-body">
        <div class="row">
          <p>
            <strong>Email:</strong>
            <%= @partner.email %>
          </p>
          <p>
            <strong>Phone:</strong>
            <%= @partner.phone_num %>
          </p>
        </div>
      </div>
    </section>
  </div>
  <% if @partner.secondary_contact_name != nil %>
  <div class="col-md-4">
    <section class="widget">
      <div class="panel-header"><i class="fa fa-user"></i> <%= @partner.secondary_contact_name %></div>
      <div class="panel-body">
        <div class="row">
          <p>
            <strong>Email:</strong>
            <%= @partner.secondary_email %>
          </p>
          <p>
            <strong>Phone:</strong>
            <%= @partner.secondary_phone_num %>
          </p>
        </div>
      </div>
    </section>
  </div>
  <% end %>
</div>


<%= link_to 'Edit', edit_partner_path(@partner) %> |
<%= link_to 'Back', partners_path %>
