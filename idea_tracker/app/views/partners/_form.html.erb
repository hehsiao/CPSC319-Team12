<% if @partner.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@partner.errors.count, "error") %> prohibited this partner from being saved:</h2>
  <ul>
    <% @partner.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>

<%= form_for(@partner) do |f| %>
<div class="form-group">
  <%= f.label :partner_name %>*<small>  <i class="fa fa-info-circle fa-fw"  rel="tooltip" title="Name of Organization" ></i> </small><br>
  <%= f.text_field :partner_name, :class => 'form-control' %>
</div>
<div class="row">
  <div class="col-md-6">
    <h4>Primary Contact</h4>
    <div class="form-group">
      <%= f.label :contact_name %>*<br>
      <%= f.text_field :contact_name, :class => 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :email %>*<br>
      <%= f.email_field :email, :class => 'form-control' %>
    </div>
    <div class="form-group">
      <label for="partner_phone_num">Phone</label><br>
      <%= f.phone_field :phone_num, :class => 'form-control' %>
    </div>
  </div>
  <div class="col-md-6">
    <h4>Secondary Contact</h4>
    <div class="form-group">
      <%= f.label :contact_name %><br>
      <%= f.text_field :secondary_contact_name, :class => 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :email %><br>
      <%= f.email_field :secondary_email, :class => 'form-control' %>
    </div>
    <div class="form-group">
      <label for="partner_phone_num">Phone</label><br>
      <%= f.text_field :secondary_phone_num, :class => 'form-control' %>
    </div>
  </div>
</div>
<div class="actions">
    <%= f.submit "Submit", :class => "btn btn-primary" %>
</div>
<% end %>
