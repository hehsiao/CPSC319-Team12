<div class="container">
<h2>Idea Tracker</h2>
<h4>Sign In</h4>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {class:"form-signin"}) do |f| %>
  <div>
  <%= f.email_field :email, :autofocus => true, :placeholder => "Email", :class => "input-block-level" %></div>

  <div>
  <%= f.password_field :password, :placeholder => "Password" %></div>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  <% end -%>

  <div><%= f.submit "Sign in", :class => "btn btn-large btn-primary" %></div>
<% end %>

<%= render "devise/shared/links" %>
</div>