
  		<div class="col-md-4">
  				<div class="panel-body">
  						<h4>Get back into your account!</h4>
  					<p>
							<em>We can help you reset your password.</em> <br>
							<small>Please provide us your email for instructions.</small>
						</p>
  					<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => {class:"form-signin"}) do |f| %>
  					<%= devise_error_messages! %>
  					<fieldset>
              <div class="form-group" input-group">
                <span class="input-group-addon"><i class="fa fa-envelope-o fa-fw"></i></span>
  							<%= f.email_field :email, :autofocus => true, :placeholder => "E-mail Address", :class => "form-control" %>
  						</div>
  						<div class="form-group">
  							<%= f.submit "Submit" , class:"btn btn-primary btn-lg btn-block" %>
  						</div>
  					</fieldset>
  					<% end %>
  				</form>
          <div class="text-right"><%= render "devise/shared/links" %></div>
  			</div>
  		</div>
  	</div>
  </div>
