<div id="loginModal" class="modal show" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog">
  <div class="modal-content">
      <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
          <h1 class="text-center">Sign Up</h1>
      </div>
      <div class="modal-body">
		<%= form_for(resource, :html => { :class => "form col-md-12 center-block" }, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
		  <%= devise_error_messages! %>

            <div class="form-group">
            	<%= f.email_field :email, :autofocus => true, class:"form-control input-lg", placeholder:"Email" %>
        	</div>

      <div class="form-group">
              <%= f.text_field :first_name, :autofocus => true, class:"form-control input-lg", placeholder:"First Name" %>
          </div>

      <div class="form-group">
              <%= f.text_field :last_name, :autofocus => true, class:"form-control input-lg", placeholder:"Last Name" %>
          </div>

			<div class="form-group">
            	<%= f.password_field :password, :autofocus => true, class:"form-control input-lg", placeholder:"Password" %>
        	</div>

			<div class="form-group">
            	<%= f.password_field :password_confirmation, :autofocus => true, class:"form-control input-lg", placeholder:"Password Confirmation" %>
        	</div>

        	<div class="form-group">
              <%= f.submit "Sign up" , class:"btn btn-primary btn-lg btn-block" %>
          	</div>

		<% end %>

		</div>


<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="login-panel panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Idea Tracker - Sign Up</h3>
                </div>
                <div class="panel-body">
          <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {class:"form-signin"}) do |f| %>
          <%= devise_error_messages! %>
                        <fieldset>
                            <div class="form-group">
                                <%= f.email_field :email, :autofocus => true, :placeholder => "E-mail", :class => "form-control" %>
                            </div>
                            <div class="form-group">
                  <%= f.password_field :password, :placeholder => "Password", :class => "form-control" %>
                            </div>
                <% if devise_mapping.rememberable? -%>
                  <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
                <% end -%>
                              <div><%= f.submit "Sign in", :class => "btn btn-lg btn-success btn-block" %></div>
                        </fieldset>
                    <% end %>
                    </form>
                    <%= render "devise/shared/links" %>
                </div>
            </div>
        </div>
    </div>
</div>
